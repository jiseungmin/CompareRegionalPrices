<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.team1project.LoginController" prefWidth="300.0" prefHeight="200.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox spacing="15.0" alignment="CENTER">
        <Text text="로그인" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <GridPane hgap="10" vgap="10">
            <Label text="사용자 이메일:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="user" promptText="E-mail" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="비밀번호:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="password" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="loginButton" text="로그인" onAction="#handleLogin"/>
            <Button fx:id="signupButton" text="회원가입" onAction="#handleSignup" />
        </HBox>
    </VBox>
</StackPane>
